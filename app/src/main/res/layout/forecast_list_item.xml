<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="@dimen/forecast_list_item_height">

    <TextView
            tools:text="Monday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/forecast_tv_day"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/default_page_margin"
            android:layout_marginStart="@dimen/default_page_margin"
            android:textSize="@dimen/forecast_list_item_font_size"
            android:textColor="@color/forecast_item_font_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.508" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/forecast_tv_temp" android:layout_marginRight="24dp"/>
    <TextView
            tools:text="22C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forecast_tv_temp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/forecast_item_font_color"
            android:textSize="@dimen/forecast_list_item_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>